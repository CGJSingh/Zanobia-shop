# WooCommerce API Configuration
# IMPORTANT: Never commit your actual credentials to version control
# Copy this file to .env.local and fill in your actual values

VITE_WOOCOMMERCE_URL=https://your-site.com/wp-json/wc/v3
VITE_WOOCOMMERCE_CONSUMER_KEY=ck_your_consumer_key_here
VITE_WOOCOMMERCE_CONSUMER_SECRET=cs_your_consumer_secret_here

# WordPress API Configuration
VITE_WORDPRESS_URL=https://your-site.com/wp-json

# JWT Authentication Configuration
# Install "JWT Authentication for WP REST API" plugin first
# https://wordpress.org/plugins/jwt-authentication-for-wp-rest-api/
VITE_JWT_AUTH_URL=https://your-site.com/wp-json/jwt-auth/v1

# Site Configuration
VITE_SITE_NAME=Your Shop Name
VITE_SITE_DESCRIPTION=Your shop description

# Stripe Configuration
# Get your keys from: https://dashboard.stripe.com/apikeys
# Use TEST keys (pk_test_...) for development
# Use LIVE keys (pk_live_...) for production
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
